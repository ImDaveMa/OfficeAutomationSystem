                    android:layout_marginStart="15dp"
                    android:gravity="end"
                    android:textColor="@color/black1"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
