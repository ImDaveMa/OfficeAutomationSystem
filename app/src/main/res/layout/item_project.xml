<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="15dp"
    tools:ignore="HardcodedText">


    <TextView
        android:id="@+id/tv_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人工智能设计"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_project_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="物联网类型"
        android:textColor="@color/orange"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/tv_project_principal_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="负责人：张三"
            android:textColor="@color/black1"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_project_create_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="发布人：李四"
            android:textColor="@color/black1"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_project_summaries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="概述：这里是概述概述概述概述概述概述概述概述概述概述概述概述概述概述"
        android:textColor="@color/black2"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_project_create_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="发布时间：2018-02-02 12:00"
        android:textColor="@color/black2"
        android:textSize="13sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_project_qualified_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:text="验收时间：2018-05-02 12:00"
            android:textColor="@color/black2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_project_dealMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="3dp"
            android:text="成交金额：20000￥"
            android:textColor="@color/red3"
            android:textSize="13sp" />

    </RelativeLayout>
</LinearLayout>